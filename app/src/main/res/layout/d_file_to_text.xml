<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scrollbars="none">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:text="语音提取文字"
        android:textColor="@color/color_title"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:drawableStart="@drawable/round_1"
        android:drawablePadding="@dimen/dp_5"
        android:text="支持30MB以内的常用格式音频文件"
        android:textColor="@color/color_content"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableStart="@drawable/round_2"
        android:drawablePadding="@dimen/dp_5"
        android:text="文件越大，转写时间越长"
        android:textColor="@color/color_content"
        android:textSize="@dimen/sp_12" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/MyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_30"
        android:max="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/converter"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:background="@drawable/shape_corner_blue"
            android:gravity="center"
            android:text="开始提取"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/close"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/shape_corner_grey"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_dark_grey"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


</LinearLayout>