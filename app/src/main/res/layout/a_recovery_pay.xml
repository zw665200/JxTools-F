<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/arr_l" />

        <TextView
            android:id="@+id/pay_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/pay_title"
            android:textColor="@color/color_content"
            android:textSize="@dimen/sp_16" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@color/color_light_white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp_16"
                android:layout_marginTop="@dimen/sp_16"
                android:layout_marginEnd="@dimen/sp_16"
                android:src="@drawable/bg_pay_banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_100"
                android:background="@drawable/shape_top_corner_white"
                android:orientation="vertical"
                android:scrollbars="none">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/pay_vip_sign_1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menu_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pay_vip_sign_2" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl_1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_120"
                        android:layout_weight="1"
                        android:background="@drawable/shape_corner_select">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:src="@drawable/ic_pay_hot" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_100"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="年度会员"
                                android:textColor="#805C44"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/origin_price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="￥268"
                                android:textColor="#805C44"
                                android:textSize="@dimen/sp_10"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/price1_per_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:textColor="#F1A13E"
                                android:textSize="@dimen/sp_20"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/price1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/shape_corner_yellow"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                    </FrameLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <FrameLayout
                        android:id="@+id/fl_2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_120"
                        android:layout_weight="1"
                        android:background="@drawable/shape_corner_unselect">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="月度会员"
                                android:textColor="#805C44"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/origin_price2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:text="￥168"
                                android:textColor="#805C44"
                                android:textSize="@dimen/sp_10"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/price2_per_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:textColor="#F1A13E"
                                android:textSize="@dimen/sp_20"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/price2"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/shape_corner_yellow"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/do_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/background_gradient_btn"
                    android:text="立即购买"
                    android:textColor="@android:color/white" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:text="选择支付方式"
                            android:textColor="@color/color_content"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px_1"
                            android:background="@color/color_cross_line" />

                        <LinearLayout
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_below="@+id/ll"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="付费前请仔细阅读"
                                android:textColor="@color/color_dark_grey"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/customer_agreement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="【会员须知】"
                                android:textColor="@color/color_dark_grey"
                                android:textSize="@dimen/sp_12" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我已阅读"
                                android:textColor="@color/color_dark_grey"
                                android:textSize="@dimen/sp_12" />

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/user_agreement"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:checked="true"
                                android:theme="@style/MyCheckBox" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:gravity="center_vertical"
                                android:text="支付宝支付"
                                android:textColor="@color/color_title"
                                android:textSize="@dimen/sp_14"
                                app:drawableStartCompat="@drawable/alipay" />

                            <TextView
                                android:id="@+id/discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:textColor="@color/color_red"
                                android:textSize="@dimen/sp_12" />


                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/do_alipay_pay"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_gravity="center_vertical"
                                android:checked="true"
                                android:theme="@style/MyCheckBox" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:gravity="center_vertical"
                                android:text="微信支付"
                                android:textColor="@color/color_title"
                                android:textSize="@dimen/sp_14"
                                app:drawableStartCompat="@drawable/wechat_pay" />

                            <TextView
                                android:id="@+id/discount_wx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:textColor="@color/color_red"
                                android:textSize="@dimen/sp_12" />


                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/do_wechat_pay"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_gravity="center_vertical"
                                android:checked="false"
                                android:theme="@style/MyCheckBox" />
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

</RelativeLayout>